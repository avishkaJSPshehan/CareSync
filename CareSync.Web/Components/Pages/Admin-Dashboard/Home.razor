@page "/admin-dashboard"

<PageTitle>Healthcare Admin</PageTitle>

<div class="top-row">

    <div class="top-row-left">
        <i class="bi bi-house"></i>
        <p>&nbsp;&nbsp;/&nbsp;&nbsp; </p>
        <p>Healthcare Dashboard</p>
    </div>

    <div class="top-row-right">
        <div class="icon-box">
            <i class="bi bi-calendar-check"></i>
        </div>
        <p>04/28/2025 - 05/27/2025</p>
    </div>

</div>

<div class="doctor-section">
  <div class="doctor-card">
    <div class="doctor-info">
      <h2>Dr. Laura Jaden</h2>
      <p>Dentist, BDS, BChD</p>
      <p>Increased patients by <span class="highlight">90</span> in the last Seven days.</p>
      <button class="book-btn">Book Appointment</button>
    </div>
    <div class="doctor-image">
      <img src="/images/card-image.png" alt="Dentist Illustration" />
    </div>
  </div>

  <div class="treatment-section">
    <h3>Available Treatments</h3>
    <div class="treatment-list">
      <div class="treatment-item">
        <img src="/images/1.png" alt="Cardiology" />
        <p>Cardiology</p>
      </div>
      <div class="treatment-item">
        <img src="/images/2.png" alt="Orthopedic" />
        <p>Orthopedic</p>
      </div>
      <div class="treatment-item">
        <img src="/images/3.png" alt="Neurology" />
        <p>Neurology</p>
      </div>
      <div class="treatment-item">
        <img src="/images/4.png" alt="Dentist" />
        <p>Dentist</p>
      </div>
      <div class="treatment-item">
        <img src="/images/5.png" alt="Pediatrics" />
        <p>Pediatrics</p>
      </div>
    </div>
  </div>
</div>
