@page "/"
@layout CareSync.Web.Components.Layout.IndexPageLayout

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @* <title>InCare Medical Website</title> *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body style="margin: 0; padding: 0; font-family: 'Arial', sans-serif;">
    <!-- Top Contact Bar -->
    <div style="background-color: #4a5568; color: white; padding: 10px 0; font-size: 14px;">
        <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 20px;">
            <div style="display: flex; gap: 30px;">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-phone" style="color: #4299e1;"></i>
                    <span>(+123) 456 7890</span>
                </div>
                <div style="display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-envelope" style="color: #4299e1;"></i>
                    <span>addyour@emailhere</span>
                </div>
                <div style="display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-clock" style="color: #4299e1;"></i>
                    <span>8:00am - 7:00pm</span>
                </div>
            </div>
            <div style="display: flex; gap: 15px;">
                <a href="#" style="color: white; text-decoration: none; background-color: #4267B2; padding: 8px; border-radius: 4px; width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" style="color: white; text-decoration: none; background-color: #1DA1F2; padding: 8px; border-radius: 4px; width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#" style="color: white; text-decoration: none; background-color: #E4405F; padding: 8px; border-radius: 4px; width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#" style="color: white; text-decoration: none; background-color: #0077B5; padding: 8px; border-radius: 4px; width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <nav style="background-color: rgba(255, 255, 255, 0.95); padding: 15px 0; position: relative; z-index: 10;">
        <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 20px;">
            <!-- Logo -->
            <div style="display: flex; align-items: center; gap: 10px;">
                <div style="background-color: #4299e1; color: white; padding: 8px; border-radius: 4px; font-size: 24px; font-weight: bold;">
                    <i class="fas fa-plus"></i>
                </div>
                <div>
                    <div style="font-size: 24px; font-weight: bold; color: #2d3748;">INCARE</div>
                    <div style="font-size: 12px; color: #4a5568; letter-spacing: 1px;">MISSION IS LIFE</div>
                </div>
            </div>

            <!-- Navigation Menu -->
            <div style="display: flex; align-items: center; gap: 40px;">
                <div style="display: flex; gap: 30px;">
                    <a href="#" style="text-decoration: none; color: #48bb78; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        HOME <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                    <a href="#" style="text-decoration: none; color: #4a5568; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        PAGES <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                    <a href="#" style="text-decoration: none; color: #4a5568; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        SERVICES <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                    <a href="#" style="text-decoration: none; color: #4a5568; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        PORTFOLIO <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                    <a href="#" style="text-decoration: none; color: #4a5568; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        BLOG <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                    <a href="#" style="text-decoration: none; color: #4a5568; font-weight: 600; display: flex; align-items: center; gap: 5px;">
                        ELEMENTS <i class="fas fa-chevron-down" style="font-size: 10px;"></i>
                    </a>
                </div>
                
                <!-- Book Appointment Button -->
                <a href="#" style="background: linear-gradient(135deg, #ff6b6b, #ee5a52); color: white; padding: 12px 25px; border-radius: 25px; text-decoration: none; font-weight: 600; display: flex; align-items: center; gap: 8px; box-shadow: 0 4px 15px rgba(238, 90, 82, 0.3);">
                    <i class="fas fa-calendar-alt"></i>
                    Book Appointment
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section style="position: relative; height: 600px; background: linear-gradient(135deg, rgba(66, 153, 225, 0.8), rgba(72, 187, 120, 0.6)); background-size: cover; background-position: center; display: flex; align-items: center; overflow: hidden;">
        
        <!-- Decorative Elements -->
        <div style="position: absolute; top: 20%; left: 10%; width: 80px; height: 80px; background-color: rgba(66, 153, 225, 0.3); border-radius: 50%; z-index: 1;"></div>
        <div style="position: absolute; bottom: 15%; right: 15%; width: 200px; height: 200px; background-color: rgba(72, 187, 120, 0.2); border-radius: 50%; z-index: 1;"></div>
        <div style="position: absolute; top: 10%; right: 20%; width: 120px; height: 120px; background-color: rgba(66, 153, 225, 0.2); border-radius: 50%; z-index: 1;"></div>

        <!-- Navigation Arrows -->
        <button style="position: absolute; left: 20px; top: 50%; transform: translateY(-50%); background-color: rgba(255, 255, 255, 0.2); border: none; color: white; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 18px; z-index: 5;">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%); background-color: rgba(255, 255, 255, 0.2); border: none; color: white; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 18px; z-index: 5;">
            <i class="fas fa-chevron-right"></i>
        </button>

        <!-- Floating Action Buttons -->
        <div style="position: absolute; right: 30px; top: 50%; transform: translateY(-50%); display: flex; flex-direction: column; gap: 15px; z-index: 5;">
            <button style="background-color: #4299e1; border: none; color: white; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 18px; box-shadow: 0 4px 15px rgba(66, 153, 225, 0.3);">
                <i class="fas fa-shopping-cart"></i>
            </button>
            <button style="background-color: #48bb78; border: none; color: white; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 18px; box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);">
                <i class="fas fa-envelope"></i>
            </button>
        </div>

        <!-- Hero Content -->
        <div style="max-width: 1200px; margin: 0 auto; padding: 0 20px; z-index: 3; position: relative;">
            <div style="max-width: 600px;">
                <h1 style="font-size: 48px; font-weight: bold; color: white; line-height: 1.2; margin: 0 0 30px 0; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                    Top Doctors Exist In Our Hospital
                </h1>
                
                <div style="display: flex; gap: 20px; margin-top: 40px;">
                    <a href="#" style="background-color: #4299e1; color: white; padding: 15px 30px; border-radius: 25px; text-decoration: none; font-weight: 600; display: inline-block; box-shadow: 0 4px 15px rgba(66, 153, 225, 0.3); transition: all 0.3s ease;">
                        Learn More
                    </a>
                    <a href="#" style="background-color: white; color: #4299e1; padding: 15px 30px; border-radius: 25px; text-decoration: none; font-weight: 600; display: inline-block; box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3); transition: all 0.3s ease;">
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

